<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/item_bg">
     <ImageView
         android:id="@+id/image"
         android:layout_width="match_parent"
         android:layout_height="180dp"
         android:scaleType="fitXY"/>
     <TextView
         android:id="@+id/title"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:singleLine="true"
         android:textSize="14sp"
         android:text="adsfsdfs"
         android:textColor="@color/category_text_color"
         android:layout_marginLeft="2dp"/>
     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginTop="5dp">
         <TextView
             android:id="@+id/price_symbol"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textColor="@android:color/holo_red_light"
             android:text="￥"
             android:textSize="16sp"
             android:layout_centerVertical="true"
             android:layout_marginLeft="2dp"/>
         <TextView
             android:id="@+id/price"
             android:layout_toRightOf="@id/price_symbol"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textColor="@android:color/holo_red_light"
             android:text="sfsadas"
             android:textSize="16sp"
             android:layout_marginLeft="3dp"
             android:layout_centerVertical="true"/>
         <FrameLayout
             android:layout_toRightOf="@id/price"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_centerVertical="true"
             android:layout_marginLeft="8dp">
             <LinearLayout
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:orientation="horizontal">
                 <TextView
                     android:id="@+id/price_symbol2"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:textColor="@color/black_26_alpha"
                     android:text="￥"
                     android:textSize="12sp"/>
                 <TextView
                     android:id="@+id/origin_price"
                     android:layout_toRightOf="@id/price_symbol"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:textColor="@color/black_26_alpha"
                     android:text="sfsadas"
                     android:textSize="12sp"
                     android:layout_marginLeft="3dp"/>
             </LinearLayout>
             <TextView
                 android:layout_width="match_parent"
                 android:layout_height="1dp"
                 android:background="@color/black_26_alpha"
                 android:layout_gravity="center_vertical"/>
         </FrameLayout>
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textSize="14sp"
             android:text="@string/bao_you"
             android:layout_alignParentRight="true"
             android:layout_marginRight="2dp"/>
     </RelativeLayout>
     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginTop="5dp">
         <TextView
             android:id="@+id/discount"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textColor="@color/black_26_alpha"
             android:text="asdsafsa"
             android:layout_centerVertical="true"
             android:layout_marginLeft="2dp"/>
         <TextView
             android:layout_toRightOf="@id/discount"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textColor="@color/black_26_alpha"
             android:text="@string/discount"
             android:layout_centerVertical="true"/>
         <ImageView
             android:layout_width="25dp"
             android:layout_height="wrap_content"
             android:src="@drawable/ico_new"
             android:layout_alignParentRight="true"
             android:layout_marginRight="2dp"
             android:layout_centerVertical="true"/>
     </RelativeLayout>
    </LinearLayout>
</LinearLayout>